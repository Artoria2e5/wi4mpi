#!/bin/bash
usage() {

    cat <<EOF
Usage: mpic++ [MPIC++_OPTION]... SOURCE...

Option:
    -h           the help message
    -show        show the compilations options

EOF

}

showme() {

cat <<EOF

${WI4MPI_CXX} -I${WI4MPI_ROOT}/include -L${WI4MPI_ROOT}/lib -lmpi

EOF

}
arg=$@
while [[ $# -ge 1 ]]
do
key=$1

case $key in
      -h | --help)
      usage; exit 0;;
      -show )
      showme; exit 0;;
esac
shift
done
${WI4MPI_CXX} -I${WI4MPI_ROOT}/include -L${WI4MPI_ROOT}/lib -lmpi $arg
exit $?
