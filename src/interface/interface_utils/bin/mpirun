WI4MPI_GCONFIG=$( readlink -f $(dirname $0)/../etc/wi4mpi.cfg )
WI4MPI_UCONFIG="~/.wi4mpi.cfg"

progname=$(basename $0)

[[ -z $WI4MPI_ROOT ]] && (>&2 echo "$progname error: please set WI4MPI_ROOT") && exit 1
[[ -z $WI4MPI_TO ]] && (>&2 echo "$progname error: please set WI4MPI_TO") && exit 1
[[ -f $WI4MPI_GCONFIG ]] && source $WI4MPI_GCONFIG
[[ -f $WI4MPI_UCONFIG ]] && source $WI4MPI_UCONFIG

MPIRUN_OPT=()
while [[ $# -gt 1 ]]; do
    MPIRUN_OPT="$MPIRUN_OPT $1"
    shift
done

if [[ ${WI4MPI_TO,,} = *"openmpi"* ]]; then
    echo "$OPENMPI_DEFAULT_ROOT/bin/mpirun $MPIRUN_OPT wi4mpi -t openmpi $@"
    $OPENMPI_DEFAULT_ROOT/bin/mpirun $MPIRUN_OPT wi4mpi -t openmpi $@
elif [[ ${WI4MPI_TO,,} == *"intelmpi"* ]]; then
    echo "$INTELMPI_DEFAULT_ROOT/bin64/mpirun $MPIRUN_OPT wi4mpi -t intelmpi $@"
    $INTELMPI_DEFAULT_ROOT/bin64/mpirun $MPIRUN_OPT wi4mpi -t intelmpi $@
else
    (>&2 echo "$progname error: wi4mpirun not implemented for $WI4MPI_TO") && exit 1
fi
